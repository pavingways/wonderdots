---
import Container from "@components/container.astro";
import Dropdown from "./dropdown.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";
import { Picture } from "astro:assets";
import logoImage from "assets/wonder-dots-tree.svg";

const menuitems = [
  {
    title: "Unsere Kurse",
    badge: false,
    children: [
      {
        title: "Allgemeine Informationen",
        path: "/kurse"
      },
      {
        title: "Baue Dein eigenes Videogame! Kurs ab 7 Jahren",
        path: "/mint-activities/1-programierung-videogame-primarschueler"
      },
      {
        title: "3er-Serie Videogames für Kids ab 11 Jahren",
        path: "/mint-activities/2-videogames-programmieren-fuer-fortgeschrittene-primarschueler"
      }
    ]
  },
  {
    title: "Über uns",
    path: "/ueberuns",
    badge: false
  },
  {
    title: "News",
    path: "/news"
  },
  {
    title: "Kontakt",
    path: "/kontakt"
  }
];
---

<Container>
  <header class="flex flex-col lg:flex-row justify-between items-center my-4 py-2 lg:px-5 max-w-screen-lg mx-auto">
    <Astronav>
      <div class="flex w-full lg:w-auto items-center justify-between">
        <a href="/" class="flex flex-row items-center min-w-[260px] gap-2 pt-6">
          <Picture
            src={logoImage}
            alt="Wonder Dots Tree"
            loading="eager"
            formats={["svg"]}
            class="mx-auto size-12 lg:size-20"
            height={100}
          />
          <div>
            <span class="text-3xl font-bold text-slate-800">Wonder Dots</span><br />
            <span class="text-md text-gray-500">MINT-Aktivitäten für Kids</span>
          </div>
        </a>
        <div class="block lg:hidden">
          <MenuIcon class="mt-2 w-8 h-8 text-black" />
        </div>
      </div>
      <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
        <ul class="flex flex-col lg:flex-row lg:gap-3 items-center">
          {
            menuitems.map((item, index) => (
              <>
                {item.children && (
                  <Dropdown
                    title={item.title}
                    children={item.children}
                    lastItem={index === menuitems.length - 1}
                  />
                )}
              </>
              <>
                {!item.children && (
                  <li>
                    <a
                      href={item.path}
                      class="flex lg:px-3 py-2 text-xl text-gray-600 hover:text-gray-900">
                      <span> {item.title}</span>

                      {item.badge && (
                        <span class="ml-1 px-2 py-0.5 text-[10px] animate-pulse font-semibold uppercase text-white bg-indigo-600 rounded-full">
                          New
                        </span>
                      )}

                    </a>
                  </li>
                )}
              </>
            ))
          }
        </ul>
        <!--<div class="lg:hidden flex items-center mt-3 gap-4">-->
        <!--  <Link href="#" style="muted" block size="md">Log in</Link>-->
        <!--  <Link href="#" size="md" block>Sign up</Link>-->
        <!--</div>-->
      </MenuItems>
    </Astronav>
  </header>
</Container>
