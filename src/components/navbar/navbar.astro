---
import Container from "@components/container.astro";
import Dropdown from "./dropdown.astro";
import { Astronav, MenuItems } from "astro-navbar";
import { Picture } from "astro:assets";
import logoImage from "assets/wonder-dots-tree.svg";

const menuitems = [
  {
    title: "Unsere Kurse",
    badge: false,
    children: [
      {
        title: "Allgemeine Infos",
        path: "/kurse"
      },
      {
        title: "VideoGame einzel",
        path: "/mint-activities/1-programming-for-primary-kids"
      },
      {
        title: "VideoGame 3-Tage",
        path: "/mint-activities/2-programming-for-primary-kids-2"
      }
    ]
  },
  {
    title: "Über uns",
    path: "/ueberuns",
    badge: false
  },
  // {
  //   title: "Blog",
  //   path: "/blog"
  // },
  {
    title: "Kontakt",
    path: "/kontakt"
  }
];
---

<Container>
  <header class="flex flex-col lg:flex-row justify-between items-center my-4 py-4 px-5">
    <Astronav>
      <a href="/">
        <div class="flex w-full lg:w-auto items-center justify-between">
          <div class="hidden lg:block">
            <Picture
              src={logoImage}
              alt="Wonder Dots Tree"
              loading="eager"
              formats={["svg"]}
              class="mx-auto"
              height={100}
            />
          </div>
          <div>
            <span class="text-3xl font-bold text-slate-800">Wonder Dots</span><br />
            <span class="text-md text-gray-500">MINT-Aktivitäten für Kids</span>
          </div>
        </div>
      </a>
      <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
        <ul class="flex flex-col lg:flex-row lg:gap-3">
          {
            menuitems.map((item, index) => (
              <>
                {item.children && (
                  <Dropdown
                    title={item.title}
                    children={item.children}
                    lastItem={index === menuitems.length - 1}
                  />
                )}
              </>
              <>
                {!item.children && (
                  <li>
                    <a
                      href={item.path}
                      class="flex lg:px-3 py-2 text-2xl lg:text-xl text-gray-600 hover:text-gray-900">
                      <span> {item.title}</span>

                      {item.badge && (
                        <span class="ml-1 px-2 py-0.5 text-[10px] animate-pulse font-semibold uppercase text-white bg-indigo-600 rounded-full">
                          New
                        </span>
                      )}

                    </a>
                  </li>
                )}
              </>
            ))
          }
        </ul>
        <!--<div class="lg:hidden flex items-center mt-3 gap-4">-->
        <!--  <Link href="#" style="muted" block size="md">Log in</Link>-->
        <!--  <Link href="#" size="md" block>Sign up</Link>-->
        <!--</div>-->
      </MenuItems>
    </Astronav>
  </header>
</Container>
