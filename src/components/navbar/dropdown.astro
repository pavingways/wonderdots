---
import { Dropdown as DropdownContainer, DropdownItems } from "astro-navbar";
const { title, lastItem, children } = Astro.props;
---

<li class="lg:relative">
  <DropdownContainer class="group">
    <button class="flex items-center justify-self-center lg:px-3 py-2 text-xl text-gray-600 hover:text-gray-900">
      <span>{title}</span>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="3"
        stroke="currentColor"
        class="hidden lg:inline-block ml-2 h-3 group-open:rotate-180">
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
      </svg>
    </button>
    <DropdownItems>
      <div class="relative lg:absolute z-10 max-w-96 lg:w-96 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 transition duration-100 ease-in-out"
        >
        <div class="flex flex-col px-3 lg:py-2">
          {
            children.map((item) => (
              <a
                href={item.path}
                class="py-2 text-gray-600 hover:text-gray-900">
                {item.title}
              </a>
            ))
          }
        </div>
      </div>
    </DropdownItems>
  </DropdownContainer>
</li>
